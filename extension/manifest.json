{
    "manifest_version": 3,
    "name": "Translingo",
    "description": "Translate videos into any languages.",
    "version": "1.12",
    "permissions": [
        "tabs",
        "storage"
    ],
    "icons": {
        "16": "/images/logo16.png",
        "48": "/images/logo48.png",
        "128": "/images/logo128.png"
    },
    "action": {
        "default_icon": {
            "16": "/images/logo16.png",
            "48": "/images/logo48.png",
            "128": "/images/logo128.png"
        },
        "default_popup": "/popup/popup.html"
    },
    "content_scripts": [{
        "matches": ["https://*/*"],
        "css": ["/main.css"],
        "js": ["/scripts/configure.js"],
        "translator": ["/scripts/translator_api.js"]
    }]
}