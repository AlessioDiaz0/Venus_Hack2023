{
    "manifest_version": 2,
    "name": "Translingo",
    "description": "Translate videos into any languages.",
    "version": "1.12",
    "permissions": [
        "tabs"
    ],
    "browser_action": {
        "default_icon": {
            "16": "/images/logo16.png",
            "48": "/images/logo48.png",
            "128": "/images/logo128.png"
        },
        "default_popup": "/popup/popup.html"
    },
    "content_scripts": [{
        "matches": ["https://www.google.com/*"],
        "css": ["main.css"]
    }]
}