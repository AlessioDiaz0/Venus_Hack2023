{
    "manifest_version": 2,
    "name": "Translingo",
    "description": "Translate videos into any languages.",
    "version": "1.0",
    "icons": {
        "16": "/images/logo16.png",
        "48": "/images/logo48.png",
        "128": "/images/logo128.png"
    },
    "page_action": {
        "default_icons": {
            "16": "/images/logo16-2.png",
            "48": "/images/logo48-2.png",
            "128": "/images/logo128-2.png"
        }
    },
    "content_scripts": [{
        "matches": ["https://www.google.com/*"],
        "css": ["main.css"]
    }]
}